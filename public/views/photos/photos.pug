extends ../base.pug

block content

    - var title = nomSousCategorie;

    include ../header.pug

    .bloc-haut

    // ScrollBar Horizontal des filtres
    .scroll-toggle 
        ul.list
            each filtre in listeFiltre 
                form(method="POST") 
                    input(type="hidden" value=filtre.id_filtre name='id')
                    button(type="submit" class="form-btn")
                        li.list-item #{filtre.nom_filtre}

    // Affichages des photos
    if listeBuff
        each photo in listeBuff
            div
                #fav
                    if photo[1] == 0
                        img.f(src="/images/fav-false.png", alt="non-favori")
                    else
                        img.f(src="/images/fav-true.png", alt="favori")
                img.photos(src="data:image/png;base64," + photo[0])
    
    .bloc-bas

    // Menu du bas de page
    ul.navbar-bottom
        li
            a(href="")
                img(src="/images/clarity_home-line.png")
        li
            a(href="")
                img(src="/images/clarity_search-line.png")
        li.monte
            a(href="/photos/" + idSousCategorie + "/ajout_photo")
                img(src="/images/BOUTON_AJOUT_PHOTO.png")
        li
            a(href="")
                img(src="/images/MENU_COMMENTAIRE.png")
        li
            a(href="")
                img(src="/images/MENU_FAVORIS.png")

    script(src="/javascript/fav.js")